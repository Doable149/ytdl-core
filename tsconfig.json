{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "@*": ["./package/*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["package/**/*", "./package.json"],
    "exclude": ["node_modules"]
}
